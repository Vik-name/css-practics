<header class="header">
    <a href="#test">
        {{> logo}}
    </a>
    <nav class="header_nav">
        <div class="header_nav_right">
            {{>nav list=header}}
        </div>
    </nav>
</header>

<main class="main">
    {{#with info}}
    <div class="hero_content">
        <h1 class="hero_title">{{title}}</h1>
        <p class="hero_text">{{description}}</p>
    </div>
    {{/with}}

    {{#with form}}
    <form class="form">
        <div class="form_input_list">
            {{#each inputs}}
            <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}"
                id="form-input-{{id}}" />
            {{/each}}
        </div>

        <div class="form_checkbox">
            <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
            <div></div>
            <label for="{{checkbox.name}}">{{checkbox.label}}</label>
        </div>

        <button type="submit" class="form_button">{{button}}</button>

        <div class="divider"></div>

        <p class="form_info">{{info}}</p>
    </form>
    {{/with}}
</main>


{{#with updates}}
<div class="messages">
    <h1 class="messages_title">{{title}}</h1>

    {{#each list}}
    <div class="msg">
        {{!-- <span {{#if @first}}class="msg_day" {{else}}class="msg_day:nth-child" {{/if}}></span>
        <span {{#if @last}}class="msg_day" {{else}}class="msg_day:nth-child" {{/if}}></span> --}}
        <span class="msg_day">32x32</span>

        <strong class="msg_name">{{nickname}}</strong>
        <p class="msg_text">{{description}}</p>

    </div>
    {{/each}}

    <a href="#" class="messages_link">All messages</a>
</div>
{{/with}}

<div class="expirience">
    {{#with expirience}}
    <div class="expirience_head">
        <h2 class="expirience_title">{{title}}</h2>
        <span class="expirience_badge">{{badge}}</span>
    </div>
    <div class="list">
        {{#each list}}
        <div>
            <strong>{{name}}</strong>
            <p>{{details}}</p>
        </div>
        {{/each}}
    </div>
    {{/with}}
</div>


<footer class="footer" id="test">
    <div>
        {{> logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>

    {{#each footer}}
    <div>
        <span class="footer_title">{{title}}</span>
        {{>nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>